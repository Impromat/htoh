 <%= render "searchbar" %>


<%@tasks.each do |task|%>
  <h2><%= link_to task.title.capitalize.truncate(30), task_path(task.id) %></h2>
  <%= image_tag(task.picture) %>
   Price : <%= task.price %> â‚¬
  <%= task.description.truncate(50) %>
  <%= link_to("Edit", edit_account_task_path(task.id), class: "btn btn-default btn-xs btn-right")%>
  <%= link_to("More details", task_path(task), class: "btn btn-default btn-xs btn-right")%>
  <%end%>


<div id="map" style="width: 100%; height: 600px;"></div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).on('ready', function() {
      handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function(){
        markers = handler.addMarkers(<%= raw @markers.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
      });
    })
  <% end %>
<% end %>