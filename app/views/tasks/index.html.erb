<h1 class = 'text-center'>Les services proches de chez vous</h1>

<%= render "searchbar" %>

<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <%@tasks.each do |task|%>
        <h3><%= link_to task.title.capitalize.truncate(30), task_path(task.id) %></h3>
          <p><%= task.description.truncate(50) %></p>
        <h3>Price : <%= task.price %> â‚¬</h3>
        <div class="resize">
          <%= image_tag(task.picture) %>
        </div>
        <%= link_to("More details", task_path(task), class: "btn btn-default btn-xs btn-right")%>
      <%end%>
    </div>

    <div class="col-xs-6">
      <div id="map" style="width: 500px; height: 600px;">
      </div>
    </div>
  </div>
</div>



<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).on('ready', function() {
      handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function(){
        markers = handler.addMarkers(<%= raw @markers.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
      });
    })
  <% end %>
<% end %>


